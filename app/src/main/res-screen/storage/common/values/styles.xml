<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_10</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="menu_labels_style">
        <item name="background">@drawable/fab_background</item>
        <item name="android:textColor">@color/fabButtonText</item>
    </style>

    <style name="NavigationButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="background">@null</item>
        <item name="backgroundTint">@color/navButtons</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MaterialButtonIconStyle" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/navButtons</item>
        <item name="background">@null</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:text">""</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
     </style>

    <style name="NavigationArrowStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="background">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>