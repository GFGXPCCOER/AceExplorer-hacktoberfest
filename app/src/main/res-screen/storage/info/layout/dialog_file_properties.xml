<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageFileIcon"
            android:layout_width="@dimen/dialog_image"
            android:layout_height="@dimen/dialog_image"
            android:src="@drawable/ic_folder"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_5"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/padding_5"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:shrinkColumns="2">

            <TableRow>

                <TextView
                    android:id="@+id/textPathPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/path"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/date_modified"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDateModified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textHiddenPlaceHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/hidden"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textHidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textReadablePlaceHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/readable"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReadable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textWriteablePlaceHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/writeable"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textWriteable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textMD5PlaceHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="end"
                    android:text="@string/md5"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textMD5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/padding_5" />
            </TableRow>

        </TableLayout>

    </ScrollView>


    <include layout="@layout/dialog_buttons" />
</LinearLayout>