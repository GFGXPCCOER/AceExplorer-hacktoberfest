<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/peek_pop_size"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10"
    android:background="@color/whiteOverlay"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/imageButtonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_info_purple"
        android:contentDescription="@string/properties"
        android:background="@null"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButtonShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:contentDescription="@string/action_share"
        app:srcCompat="@drawable/ic_share_purple"/>

</RelativeLayout>