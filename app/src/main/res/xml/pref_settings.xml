<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_themes"
        android:entryValues="@array/pref_themes_values"
        android:key="prefThemes"
        android:layout="@layout/prefs_settings_item"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_theme" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="prefHomeScreen"
        android:layout="@layout/prefs_checkbox"
        android:title="@string/pref_title_homescreen" />

    <CheckBoxPreference
        android:key="prefHidden"
        android:layout="@layout/prefs_checkbox"
        android:title="@string/pref_title_show_hidden" />

    <CheckBoxPreference
        android:key="prefDualPane"
        android:layout="@layout/prefs_checkbox"
        android:title="@string/pref_title_disable_dual" />

    <Preference
        android:key="prefsReset"
        android:layout="@layout/prefs_settings_item"
        android:title="@string/pref_title_reset_fav" />


    <ListPreference
        android:entries="@array/changeLanguage"
        android:entryValues="@array/changeLanguageValues"
        android:key="prefLanguage"
        android:layout="@layout/prefs_settings_item"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_change_lang" />

    <Preference
        android:key="prefsUpdate"
        android:layout="@layout/prefs_settings_item"
        android:title="@string/pref_title_check_update" />

    <CheckBoxPreference
        android:key="prefsAnalytics"
        android:defaultValue="true"
        android:layout="@layout/prefs_checkbox"
        android:title="@string/analytics_text"
        android:summary="@string/analytics_summary"/>


    <PreferenceScreen
        android:key="container"
        android:layout="@layout/prefs_settings_item"
        android:title="@string/pref_title_about">


        <Preference
            android:key="prefsVersion"
            android:layout="@layout/prefs_settings_item"
            android:title="@string/pref_title_version" />

        <com.siju.acexplorer.settings.OpenSourceDialogPreference
            android:key="prefsOpenSource"
            android:layout="@layout/prefs_settings_item"
            android:title="@string/open_source_license" />

        <Preference
            android:key="prefsPrivacyPolicy"
            android:layout="@layout/prefs_settings_item"
            android:title="@string/privacy_policy" />

    </PreferenceScreen>


</PreferenceScreen>
