<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView
        android:id="@+id/imageLibrary"
        android:layout_width="@dimen/home_library_width"
        android:layout_height="@dimen/home_library_width"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginStart="@dimen/drawer_item_margin"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle"
        android:contentDescription="@string/img_accessibility_icon_lib"
        android:scaleType="centerInside"
        android:src="@drawable/ic_library_images"/>

    <TextView
        android:id="@+id/textCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageLibrary"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageLibrary"
        android:layout_marginTop="1dp"
        android:background="@drawable/circle_count"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="25dp"
        android:minWidth="25dp"
        android:textColor="@color/white"
        android:textSize="@dimen/library_count_font_size"/>

    <TextView
        android:id="@+id/textLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLibrary"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginStart="@dimen/drawer_item_margin"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />

</RelativeLayout>