<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imageLibrary"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle"
        android:scaleType="centerInside"
        android:src="@drawable/ic_home_images"/>

    <TextView
        android:id="@+id/textCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageLibrary"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageLibrary"
        android:background="@drawable/circle_count"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:padding="5dp"
        android:text="4+"
        android:textColor="@color/white"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/textLibrary"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLibrary"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Images"
        />

</RelativeLayout>