<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="@dimen/folder_icon_grid"
        android:layout_height="@dimen/folder_icon_grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_folder_main"/>

    <TextView
        android:id="@+id/textFolderName"
        android:layout_width="@dimen/folder_icon_grid"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageIcon"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="14sp"/>

    <!-- This will be no of files for directory & size for file -->
    <TextView
        android:id="@+id/textSecondLine"
        android:layout_width="@dimen/folder_icon_grid"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFolderName"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textSize="12sp"/>


    <ImageView
        android:id="@+id/imageThumbIcon"
        android:layout_width="@dimen/folder_thumb_icon_grid"
        android:layout_height="@dimen/folder_thumb_icon_grid"
        android:layout_alignBottom="@id/imageIcon"
        android:layout_alignEnd="@+id/imageIcon"
        android:layout_alignRight="@+id/imageIcon"
        android:scaleType="centerCrop"/>

</RelativeLayout>