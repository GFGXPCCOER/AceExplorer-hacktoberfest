<com.siju.acexplorer.ui.ActionBarCustomView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_panel"
    style="?attr/actionBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgNavigationIcon"
        android:src="@drawable/ic_drawer"
        android:background="@null"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/action_bar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgNavigationIcon"
        android:layout_toEndOf="@id/imgNavigationIcon">


        <com.siju.acexplorer.common.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/imgButtonOverflow"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/imgButtonOverflow" />

        <!--<ImageButton-->
            <!--android:id="@+id/imgPaste"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:background="@null"-->
            <!--android:src="@drawable/ic_paste_white"-->
            <!--android:layout_toLeftOf="@+id/imgButtonOverflow"/>-->


        <ImageButton
            android:id="@+id/imgButtonOverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/searchview_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_overflow" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textAppearance="@style/ToolbarTitle"
            android:layout_alignBottom="@+id/imgButtonOverflow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />


    </RelativeLayout>
    <!--<ViewStub android:id="@+id/context_stub" android:visibility="gone" android:inflatedId="@id/action_bar_context" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/ab_icon" />-->
</com.siju.acexplorer.ui.ActionBarCustomView>
