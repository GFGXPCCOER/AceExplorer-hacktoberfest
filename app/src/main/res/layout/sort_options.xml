<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroupSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_name" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_name_desc" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_type" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_type_desc" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_size" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_size_desc" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_date" />

        <RadioButton
            style="@style/RadioButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_date_desc" />


    </RadioGroup>
</ScrollView>