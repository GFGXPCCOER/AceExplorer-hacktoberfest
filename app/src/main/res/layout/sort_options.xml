<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radioGroupSort"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioButton
        style="@style/RadioButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_sort_name"
        android:drawablePadding="@dimen/margin_20"
        android:text="@string/sort_name" />

    <RadioButton
        style="@style/RadioButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_sort_type"
        android:drawablePadding="@dimen/margin_30"
        android:text="@string/sort_type" />

    <RadioButton
        style="@style/RadioButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_sort_size"
        android:drawablePadding="@dimen/margin_30"
        android:text="@string/sort_size" />


    <RadioButton
        style="@style/RadioButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_sort_date"
        android:drawablePadding="@dimen/margin_30"
        android:text="@string/sort_date" />


</RadioGroup>