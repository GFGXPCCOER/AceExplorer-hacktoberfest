<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_5"
    android:layout_marginTop="@dimen/padding_5"
    android:paddingEnd="@dimen/drawer_item_margin"
    android:paddingLeft="@dimen/drawer_item_margin"
    android:paddingRight="@dimen/drawer_item_margin"
    android:paddingStart="@dimen/drawer_item_margin">

    <ImageView
        android:id="@+id/imageDrawerItem"
        android:layout_width="@dimen/drawer_item_icon_width"
        android:layout_height="@dimen/drawer_item_icon_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/drawer_item_text_margin"
        android:layout_marginStart="@dimen/drawer_item_text_margin"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/imageDrawerItem"
        android:layout_toRightOf="@+id/imageDrawerItem"
        android:textSize="14sp" />


    <ProgressBar
        android:id="@+id/progressBarSD"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFirstLine"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_toEndOf="@+id/imageDrawerItem"
        android:layout_toRightOf="@+id/imageDrawerItem"
        android:max="100"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarSD"
        android:layout_marginLeft="@dimen/drawer_item_text_margin"
        android:layout_marginStart="@dimen/drawer_item_text_margin"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/imageDrawerItem"
        android:layout_toRightOf="@id/imageDrawerItem"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp" />


</RelativeLayout>