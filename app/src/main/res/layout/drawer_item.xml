<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="@dimen/drawer_item_margin"
    android:layout_marginRight="@dimen/drawer_item_margin"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_drawer_item"
        android:layout_width="@dimen/drawer_item_icon_width"
        android:layout_height="@dimen/drawer_item_icon_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginStart="@dimen/drawer_item_margin"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/drawer_item_text_margin"
        android:layout_marginStart="@dimen/drawer_item_text_margin"
        android:layout_toRightOf="@+id/image_drawer_item"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textSecondLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textFirstLine"
        android:layout_marginLeft="@dimen/drawer_item_text_margin"
        android:layout_marginStart="@dimen/drawer_item_text_margin"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/image_drawer_item" />


</RelativeLayout>