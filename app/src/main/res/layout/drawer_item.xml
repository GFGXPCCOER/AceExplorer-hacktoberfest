<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_row_width"
    android:layout_marginEnd="@dimen/drawer_item_margin"
    android:layout_marginLeft="@dimen/drawer_item_margin"
    android:layout_marginRight="@dimen/drawer_item_margin"
    android:layout_marginStart="@dimen/drawer_item_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_drawer_item"
        android:layout_width="@dimen/drawer_item_icon_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_drawer_item" />

    <TextView
        android:id="@+id/textSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFirstLine"
        android:layout_toRightOf="@id/image_drawer_item" />


</RelativeLayout>