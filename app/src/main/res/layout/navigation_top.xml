<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:fab="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 tools:context="com.siju.filemanager.BaseActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="?attr/actionBarStyle"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>


        <LinearLayout
            android:id="@+id/layoutNavigate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:id="@+id/scrollNavigation"
                android:layout_width="0dp"
                android:layout_height="@dimen/nav_dir_height"
                android:layout_weight="0.5"
                android:scrollbars="none">


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/navButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="SIJU" />-->

                    </LinearLayout>
                </FrameLayout>

            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/scrollNavigationDualPane"
                android:layout_width="0dp"
                android:layout_height="@dimen/nav_dir_height"
                android:layout_weight="0.5"
                android:scrollbars="none"
                android:visibility="gone">


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/navButtonsDualPane"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="SIJU2222" />-->
                    </LinearLayout>
                </FrameLayout>

            </HorizontalScrollView>
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/main_content"/>

    <!--    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_input_add"
            />-->

    <FrameLayout
        android:id="@+id/frameLayoutFab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteOverlay">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fabCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:fab_addButtonSize="normal"
            fab:fab_addButtonColorNormal="@color/colorPrimary"
            fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCreateFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_icon="@drawable/ic_fab_file"
                fab:fab_plusIconColor="@color/white"
                fab:fab_size="normal"
                fab:fab_title="@string/new_file"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCreateFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_icon="@drawable/ic_fab_folder"
                fab:fab_plusIconColor="@color/white"
                fab:fab_size="normal"
                fab:fab_title="@string/new_folder"/>
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayoutFabDual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center"
        android:visibility="gone"
        android:background="@color/whiteOverlay">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fabCreateDual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin_dual_right"
            app:fab_addButtonSize="normal"
            fab:fab_addButtonColorNormal="@color/colorPrimary"
            fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCreateFileDual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_icon="@drawable/ic_fab_file"
                fab:fab_plusIconColor="@color/white"
                fab:fab_size="normal"
                fab:fab_title="@string/new_file"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCreateFolderDual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_icon="@drawable/ic_fab_folder"
                fab:fab_plusIconColor="@color/white"
                fab:fab_size="normal"
                fab:fab_title="@string/new_folder"/>
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>

    <com.siju.filemanager.ui.SplitToolbar
        android:id="@+id/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <!--<include layout="@layout/bottom_menu"/>-->


</android.support.design.widget.CoordinatorLayout>
