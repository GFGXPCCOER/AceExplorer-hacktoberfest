<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">


    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="@dimen/folder_icon"
        android:layout_height="@dimen/folder_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginRight="@dimen/drawer_item_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_folder_white"/>


    <TextView
        android:id="@+id/textFolderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imageIcon"
        android:textColor="@color/text_settings_list"
        android:textSize="14sp"/>

    <!-- This will be no of files for directory & size for file -->
    <TextView
        android:id="@+id/textSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFolderName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageIcon"
        android:text="Second line"

        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textColor="@color/text_settings_list"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textFolderName"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:text="12 june"
        android:textColor="@color/text_settings_list"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/imageThumbIcon"
        android:layout_width="@dimen/folder_thumb_icon"
        android:layout_height="@dimen/folder_thumb_icon"
        android:layout_alignEnd="@+id/imageIcon"
        android:layout_alignRight="@+id/imageIcon"
        android:layout_alignTop="@+id/textSecondLine"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

</RelativeLayout>