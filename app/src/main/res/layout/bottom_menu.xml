<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    >

    <ImageButton
        android:id="@+id/imageButtonCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/ic_cut_black" />

    <ImageButton
        android:id="@+id/imageButtonCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/ic_copy_black" />

    <ImageButton
        android:id="@+id/imageButtonPaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/ic_paste_black"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButtonRename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/ic_rename" />

    <ImageButton
        android:id="@+id/imageButtonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/ic_delete_black" />

    <ImageButton
        android:id="@+id/imageButtonProperties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/ic_info_black" />


</LinearLayout>