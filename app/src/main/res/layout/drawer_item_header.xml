<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


    <TextView
        android:id="@+id/textDrawerHeaders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginStart="@dimen/drawer_item_margin"
        android:layout_marginTop="@dimen/padding_10"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap"/>

    <ImageView
        android:id="@+id/imageExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/padding_10"
        android:contentDescription="@string/img_accessibility_expand"
        android:paddingEnd="@dimen/drawer_item_margin"
        android:paddingLeft="@dimen/drawer_item_margin"
        android:paddingRight="@dimen/drawer_item_margin"
        android:paddingStart="@dimen/drawer_item_margin"
        android:src="@drawable/ic_expand_more_black"/>

</RelativeLayout>
