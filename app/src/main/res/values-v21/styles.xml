<resources>


    <style name="BaseLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
    </style>


    <style name="BaseDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
    </style>

    <style name="BaseLightTheme.Light" />

    <style name="BaseDarkTheme.Dark" />


    <style name="BaseDarkTheme.Settings">
        <item name="windowActionModeOverlay">false</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/dark_text</item>
        <item name="android:listDivider">@null</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <style name="BaseLightTheme.Settings">
        <item name="windowActionModeOverlay">false</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:listDivider">@null</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>


</resources>
