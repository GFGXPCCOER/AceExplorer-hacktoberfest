<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.siju.acexplorer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- To install apps -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!-- For setting alarm, ringtone !-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <!-- Normal permission(auto granted) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- For starting foreground service in Android P and above -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!-- For deleting packages in App manager in Android P and above -->
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>

    <application
        android:name=".AceApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".welcome.WelcomeActivity"
            android:theme="@style/WelcomeScreen"
            android:screenOrientation="userPortrait"
            android:configChanges="screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                       android:resource="@xml/shortcuts" />
        </activity>


        <activity
            android:name="com.siju.acexplorer.main.AceActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|smallestScreenSize"
            android:label="@string/app_name"
            android:theme="@style/BaseDarkTheme"
            android:resizeableActivity="true"
            android:launchMode="singleTask"
            tools:targetApi="n">

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!--            <intent-filter>
                            <action android:name="android.intent.action.VIEW"/>
                            <category android:name="android.intent.category.DEFAULT"/>

                            <data android:mimeType="application/vnd.android.package-archive"/>
                            <data android:mimeType="application/java-archive"/>
                            <data android:mimeType="application/zip"/>
                            <data android:mimeType="application/rar"/>
                            <data android:mimeType="application/x-rar-compressed"/>
                        </intent-filter>-->

        </activity>

        <activity
            android:name=".picker.TransparentActivity"
            android:theme="@style/TransparentTheme">
            <intent-filter>
                <action android:name="android.intent.action.RINGTONE_PICKER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT"/>
                <data android:mimeType="*/*"/>

                <category android:name="android.intent.category.OPENABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

<!--        <activity-->
<!--            android:name="com.siju.acexplorer.settings.SettingsActivity"-->
<!--            android:configChanges="orientation|screenSize|keyboardHidden"-->
<!--            android:label="@string/action_settings"-->
<!--            android:permission="android.permission.WRITE_SECURE_SETTINGS">-->
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.APPLICATION_PREFERENCES"/>-->
<!--                <category android:name="android.intent.category.DEFAULT"/>-->
<!--            </intent-filter>-->
<!--        </activity>-->

        <activity android:name=".appmanager.view.AppDetailActivity"
            android:theme="@style/BaseDarkTheme">
        </activity>

        <service android:name=".storage.model.task.CreateZipService"/>
        <service android:name=".storage.model.task.CopyService"/>
        <service android:name=".storage.model.task.ExtractService"/>
        <service android:name=".storage.model.task.MoveService" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>
        <provider
            android:name=".search.model.SearchSuggestionProvider"
            android:authorities="com.siju.acexplorer.SearchSuggestionProvider"
            android:exported="false" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d34cf3ffdd00d6e0d7b3e85d558c4fa01210a6f1"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <!-- Required for targeting API level 28 and higher -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

</manifest>