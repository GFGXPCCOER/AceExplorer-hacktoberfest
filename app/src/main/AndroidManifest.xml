<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.siju.acexplorer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.siju.acexplorer.BaseActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data android:scheme="file"/>
                <data android:host="*"/>
                <data android:mimeType="application/vnd.android.package-archive"/>
                <data android:mimeType="application/miui-mtz"/>
                <data android:mimeType="application/java-archive"/>
                <data android:mimeType="application/gzip"/>
                <data android:mimeType="gzip/document"/>
                <data android:mimeType="application/x-bzip"/>
                <data android:mimeType="application/gzipped"/>
                <data android:mimeType="application/x-gunzip"/>
                <data android:mimeType="application/x-gzip-compressed"/>
                <data android:mimeType="application/gzip-compressed"/>
                <data android:mimeType="application/x-compressed"/>
                <data android:mimeType="application/x-compress"/>
                <data android:mimeType="application/x-winzip"/>
                <data android:mimeType="multipart/x-zip"/>
                <data android:mimeType="application/zip"/>
                <data android:mimeType="application/rar"/>
                <data android:mimeType="application/x-rar-compressed"/>
                <data android:mimeType="application/x-gtar"/>
                <data android:mimeType="application/x-tar"/>
                <data android:mimeType="application/x-bz2"/>
                <data android:mimeType="application/x-bzip2"/>
                <data android:mimeType="application/x-gzip"/>
                <data android:mimeType="application/x-gzip"/>
                <data android:mimeType="application/x-7z-compressed"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="sj.intent.explore"/>

                <data android:scheme="smb"/>
                <data android:scheme="bt"/>
                <data android:scheme="http"/>
                <data android:scheme="https"/>
                <data android:scheme="ftp"/>
                <data android:scheme="sftp"/>
                <data android:host="*"/>
                <data android:pathPattern=".*\.zip"/>
                <data android:pathPattern=".*\.zip.*"/>
                <data android:pathPattern=".*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\..*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\..*\..*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\..*\..*\..*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\..*\..*\..*\..*\..*\.zip.*"/>
                <data android:pathPattern=".*\..*\..*\..*\..*\..*\..*\..*\..*\.zip.*"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.siju.acexplorer.settings.SettingsActivity"
            android:label="@string/action_settings"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.SettingsTheme"

            />
        <activity android:name="com.siju.acexplorer.filesystem.LibrarySortActivity"/>
        <service android:name="com.siju.acexplorer.filesystem.task.CreateZipTask"/>
        <service android:name=".filesystem.task.CopyService"/>
        <service android:name=".filesystem.task.ExtractService"/>
    </application>

</manifest>